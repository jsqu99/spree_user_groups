<%# don't show adjustments section if the only adjustments are user groups (which are hidden %>
<% if @order.adjustments.eligible.any? {|adjustment| adjustment.originator_type != 'Spree::UserGroup' } %>

<thead>
  <tr data-hook="cart_adjustments_headers">
    <th class="cart-adjustment-header" colspan="6">Order Adjustments</th>
  </tr>
</thead>
<tbody id="cart_adjustments" data-hook>
  <% @order.adjustments.eligible.each do |adjustment| %>
    <% next if adjustment.originator_type == 'Spree::UserGroup' %>
    <tr>
      <td colspan="4"><%= adjustment.label %></td>
      <td><%= money(adjustment.amount) %></td>
      <td></td>
    </tr>
  <% end %>
</tbody>
<% end %>
