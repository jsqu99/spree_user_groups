<%# too many deface overrides.  hence the copy / paste %>
<%= t('order_mailer.cancel_email.dear_customer') %>

<%= t('order_mailer.cancel_email.instructions') %>

============================================================
<%= t('order_mailer.cancel_email.order_summary_canceled') %>
============================================================
<% @order.line_items.each do |item| %>
  <%= item.variant.sku %> <%= raw(item.variant.product.name) %> <%= raw(item.variant.options_text) -%> (<%=item.quantity%>) @ <%= money item.variant.price_for_user(item.order.user) %> = <%= money(item.variant.price_for_user(item.order.user) * item.quantity) %>
<% end %>
============================================================
<%= t('order_mailer.cancel_email.subtotal') %> <%= money @order.item_total_for_user %>
<% @order.adjustments.eligible.each do |adjustment| %>
  <% next if (adjustment.originator_type == 'Spree::UserGroup') %>
  <%= raw(adjustment.label) %> <%= money(adjustment.amount) %>
<% end %>
<%= t('order_mailer.cancel_email.total') %> <%= money(@order.total) %>
